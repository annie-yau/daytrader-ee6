pipeline {
 agent any
 stages {
 stage('Build Automation') {
 steps {
 sh '''
 echo "BUILD NUMBER: ${BUILD_NUMBER}"
 export M2_HOME=/usr/local/src/apache-maven
 export PATH=$PATH:$M2_HOME/bin
 export JAVA_HOME=/opt/jdk1.8.0_171
 cd dt-ejb
 mvn clean test install
 cd ../Rest
 mvn clean test install
 cd ../web
 mvn clean test install
 '''
 }
 }
 }
}
