{
  "apiVersion": "extensions/v1beta1",
  "kind": "Deployment",
  "metadata": {
    "name": "wlp-markets-jenkins",
    "namespace": "default",
    "labels": {
      "app": "wlp-markets-jenkins"
    },
    "annotations": {
      "deployment.kubernetes.io/revision": "1",
      "kubernetes.io/change-cause": "Initial application creation."
    }
  },
  "spec": {
    "replicas": 1,
    "selector": {
      "matchLabels": {
        "app": "wlp-markets-jenkins"
      }
    },
    "template": {
      "metadata": {
        "labels": {
          "app": "wlp-markets-jenkins"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "wlp-markets-jenkins",
            "image": "mycluster.icp:8500/default/wlp-markets",
             "ports": [
              {
                "containerPort": 80,
                "protocol": "TCP"
              }
            ],
         "env": [
              {
                "name": "REST_CONTEXT_ROOT_URL",
                "value": "http://10.0.2.15:9086/marketsMicroService"
              }
            ],
            "resources": {},
            "terminationMessagePath": "/dev/termination-log",
            "terminationMessagePolicy": "File",
            "imagePullPolicy": "IfNotPresent"
          }
        ],
        "restartPolicy": "Always",
        "terminationGracePeriodSeconds": 30,
        "dnsPolicy": "ClusterFirst",
        "securityContext": {},
        "imagePullSecrets": [
          {
            "name": "admin.registrykey"
          }
          ],
        "schedulerName": "default-scheduler"
      }
    },
    "strategy": {
      "type": "RollingUpdate",
      "rollingUpdate": {
        "maxUnavailable": 1,
        "maxSurge": 1
      }
    }
  }
}
