pipeline {
    agent any
    parameters {
        string(name: 'ICP_MASTER_CFC', defaultValue: 'mycluster.icp:8500')
        string(name: 'ICP_MASTER_8001', defaultValue: 'https://10.0.2.15:8001')
        string(name: 'ICP_TOKEN', defaultValue: 'eyJhbGciOiJSUzI1NiIsInR5cCI6IkpXVCJ9..YSQCw7KPCLKLd5j4fUzCP0esw0NVlv0ff1uDCB7XtnVuqOzRdZ0yZvW5uigwNgS9nnXtOnalxtjxcbPEYtiluP4kEjXxIMKSpwaolJ3rCXgPtCsQrwXOfY1uiVqNF0hOU75UdaSFnqGMCvW0Za57tO-aNt7D8PF0tD6-7rNf3Rq7xr_12koA_FLsmBxLuz4IG7DSSaIBhbU4I_fijmClSpGgeOypqE18bDQUAU7nsxPQFMR6_3IwnBizUNwzlMWZTom27MgVEAyuHxabOP0qC0wTHkVmKvXJ9CP_mt998lQ_x5ukTYxeEisR9cvh3eX53SIjvW3MXMzcS4RbCg_EOg')
    }
    stages {
        stage('Continuous Integration') {
            steps {
                sh '''
                    export M2_HOME=/usr/local/src/apache-maven
                    export PATH=$PATH:$M2_HOME/bin
                    export JAVA_HOME=/opt/jdk1.8.0_171
                    cd dt-ejb-client
                    mvn clean install
                    cd ../rest-client
                    mvn clean install
                    cd ../marketsMicroService
                    mvn clean install
                    '''
             }             
        }
        stage('Continuous Delivery') {
            steps {
                sh '''     
                    export PATH=$PATH:/usr/local/bin
                    echo "docker login to master.cfc"
                    docker login -u admin -p admin $ICP_MASTER_CFC
                    echo "docker tag"
                    docker tag dhvines/wlp-markets:1.0-SNAPSHOT $ICP_MASTER_CFC/default/wlp-markets
                    echo "docker push"
                    docker push $ICP_MASTER_CFC/default/wlp-markets
                    echo "kubectl login"                    
                    kubectl config set-cluster cfc --server=$ICP_MASTER_8001 --insecure-skip-tls-verify=true
                    kubectl config set-context cfc --cluster=cfc
                    kubectl config set-credentials user --token=$ICP_TOKEN
                    kubectl config set-context cfc --user=user --namespace=default
                    kubectl config use-context cfc
                    #!/bin/bash
                    echo "checking if wlp-markets-jenkins already exists"
                    if kubectl describe service wlp-markets-jenkins; then
                        echo "Service already exists, delete first"
                        kubectl delete service wlp-markets-jenkins
                    fi
                    if kubectl describe deployment wlp-markets-jenkins; then
                        echo "Application already exists, delete first"
                        kubectl delete deployment wlp-markets-jenkins
                    fi
                    echo "Create application"
                    kubectl create -f ./marketsMicroService/app.json
                    echo "Create service"
                    set +e
                    kubectl create -f ./marketsMicroService/service.json                                      
                    echo "finished"
                '''
            }
        }
    }
}
